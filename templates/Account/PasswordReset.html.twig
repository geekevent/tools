{% extends "/base.html.twig" %}
{% block template %}
    <div class="row peach-gradient full-height">
        <div class="col-12 inner-height">
            <div class="row justify-content-center align-items-center">
                <div class="col-6 mt-auto">
                    <form class="border border-light p-5 rgba-white-strong" action="" method="POST">
                        <div class="row">
                            <div class="col-12 text-center">
                                <p class="h4 mt-5">
                                   Saisissez votre login
                                </p>
                                <small>Un lien vous sera envoyé sur la boite mail du compte pour réinitialiser votre mot de passe</small>
                            </div>
                            <div class="col-12">
                                <div class="md-form">
                                    <label for="login">Login</label>
                                    <input type="text" value="{{ login }}" name="login" id="login" class="form-control" required autofocus>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-lg btn-primary" type="submit">
                                    Connexion
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}