<ul class="custom-scrollbar navbar-nav mr-auto">
    {%- for bloc in menu -%}
        {%- if bloc is iterable -%}
            <li class="p-2 text-left nav-item border-bottom border-grey text-dark nav-item-with-sub-menu">
                <div class="navbar-button waves-effect sub-menu-button">{{bloc.title}} <i class="fas fa-sort-down"></i></div>
                <div class="ml-3 sub-menu {% if bloc.active -%}sub-menu-show{% else -%}sub-menu-hidden{%- endif -%}">
                    {% set last = bloc.route|last %}
                    {%- for item in bloc.route -%}
                        <a class="{%- if last != item -%}border-bottom border-grey {% endif -%}p-2 d-block nav-item navbar-button waves-effect text-dark {% if item.getOption('active') %}active{% endif %}" href="{{ item.path }}">{{ item.getOption('title') }}</a>
                    {%- endfor -%}
                </div>
            </li>
        {%- else -%}
            <a class="p-2 text-left nav-item border-bottom border-grey navbar-button waves-effect text-dark {% if bloc.getOption('active') %}active{% endif %}" href="{{ bloc.path }}"
                   href="{{ bloc.path }}"
                >
                {{ bloc.getOption('title') }}
            </a>
        {% endif %}
    {%- endfor -%}
    <a class="p-2 text-left nav-item navbar-button waves-effect text-dark " href="{{ path('app_logout') }}">
        Deconnexion
    </a>
</ul>